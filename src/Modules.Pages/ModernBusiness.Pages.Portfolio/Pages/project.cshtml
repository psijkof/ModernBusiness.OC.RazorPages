@page "{projectTitle?}"
@model projectModel
@{
}

@if (Model.Project != null)
{
    @section Header {
        <partial name="/Areas/ModernBusiness.Pages.Shared/Pages/Shared/BreadcrumbHeader.cshtml" model="Model.Project" />
    }

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="@Orchard.AssetUrl((string)Model.Project.Content.Project.Image.Paths[0])" alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">@T["Project Description"]</h3>
            @Model.Project.Content.HtmlBodyPart.Html
        </div>

    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->
    @if (Model.RelatedProjects != null)
    {

        <h3 class="my-4">Related Projects</h3>

        <div class="row">
            @foreach (var relProj in Model.RelatedProjects)
            {
                <div class="col-md-3 col-sm-6 mb-4">
                    <a href="@relProj.DisplayText">
                        <img class="img-fluid" asset-src="@relProj.Content.Project.Image.Paths[0]" img-width="500" img-height="300" img-resize-mode="Max" alt="" />
                    </a>
                </div>
            }
        </div>
        <!-- /.row -->
    }
    else
    {
        <br />
    }
}
